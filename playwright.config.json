{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["playwright", "launch-server", "--port=0"],
      "browser": {
        "name": "chromium",
        "headless": false,
        "viewport": {
          "width": 1280,
          "height": 720
        }
      },
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "0"
      },
      "use": {
        "trace": "on-first-retry",
        "screenshot": "only-on-failure"
      }
    }
  }
} 